            <c:if test="${not empty currentUser}">
                欢迎，${currentUser.username}！ <a href="${pageContext.request.contextPath}/logout">登出</a>
            </c:if>
        </div>

        <!-- 成功消息 -->
        <c:if test="${not empty successMessage}">
            <div class="success-message">${successMessage}</div>
        </c:if>

        <!-- 错误消息 -->
        <c:if test="${not empty errorMessage}">
            <div class="error-message">${errorMessage}</div>
        </c:if>

        <!-- 添加演唱会表单 -->
        <div class="form-container">
            <h3>添加新的演唱会</h3>
            <form action="${pageContext.request.contextPath}/addConcert" method="post">
                <div class="form-group">
                    <label for="add-name">名称:</label>
                    <input type="text" name="name" id="add-name" required maxlength="512"/>
                </div>
                <div class="form-group">
                    <label for="add-date">日期:</label>
                    <input type="date" name="date" id="add-date" required />
                </div>
                <div class="form-group">
                    <label for="add-location">地点:</label>
                    <input type="text" name="location" id="add-location" required />
                </div>
                <div class="form-group">
                    <label for="add-ticketPrice">票价:</label>
                    <input type="number" name="ticketPrice" id="add-ticketPrice" step="0.01" required />
                </div>
                <button type="submit" class="btn">添加演唱会</button>
            </form>
        </div>

        <!-- 演唱会列表 -->
        <h3>演唱会列表</h3>
        <table>
            <thead>
                <tr>
                    <th>名称</th>
                    <th>日期</th>
                    <th>地点</th>
                    <th>票价</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                <c:forEach var="concert" items="${concerts}">
                    <tr>
                        <td>${concert.name}</td>
                        <td>${concert.date}</td>
                        <td>${concert.location}</td>
                        <td>${concert.ticketPrice}</td>
                        <td>
                            <!-- 编辑按钮 -->
                            <button class="action-btn edit-btn" onclick="populateEditForm(${concert.id}, '${concert.name}', '${concert.date}', '${concert.location}', ${concert.ticketPrice})">编辑</button>
                            <!-- 删除按钮 -->
                            <form action="${pageContext.request.contextPath}/deleteConcert" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="${concert.id}" />
                                <button type="submit" class="action-btn delete-btn" onclick="return confirm('确定要删除此演唱会吗？');">删除</button>
                            </form>
                        </td>
                    </tr>
                </c:forEach>
            </tbody>
        </table>

        <!-- 编辑演唱会表单（隐藏，显示时填充数据） -->
        <div class="form-container" id="editFormContainer" style="display:none;">
            <h3>编辑演唱会</h3>
            <form action="${pageContext.request.contextPath}/updateConcert" method="post">
                <input type="hidden" name="id" id="edit-id" />
                <div class="form-group">
                    <label for="edit-name">名称:</label>
                    <input type="text" name="name" id="edit-name" required maxlength="512"/>
                </div>
                <div class="form-group">
